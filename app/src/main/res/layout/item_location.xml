<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp">
    <RelativeLayout
        android:id="@+id/rlImgMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:background="@drawable/message_me_shape">

        <com.google.android.gms.maps.MapView
            android:id="@+id/iviLocation"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:paddingStart="8dp"
            android:paddingTop="4dp"
            android:paddingEnd="8dp"

            android:scaleType="fitCenter"
            tools:src="@drawable/ic_sendimg" />
        <TextView
            android:id="@+id/tviMessageTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iviLocation"
            android:layout_alignEnd="@id/iviLocation"
            android:layout_marginEnd="8dp"
            android:textSize="12sp"
            tools:text="3/15/2018 3:00 PM"/>
    </RelativeLayout>
</FrameLayout>